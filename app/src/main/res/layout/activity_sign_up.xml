<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/centre_of_sign_up_screen">
        <EditText
            android:id="@+id/signUpStudentID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:hint="@string/IDPrompt"
            android:layout_margin="16dp"/>

        <EditText
            android:id="@+id/signUpPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="30sp"
            android:hint="@string/PasswordPrompt"
            android:layout_margin="16dp"/>

        <EditText
            android:id="@+id/signUpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:hint="@string/NamePrompt"
            android:layout_margin="16dp"/>

        <EditText
            android:id="@+id/signUpMG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:hint="@string/MentorGroupPrompt"
            android:layout_margin="16dp"/>


        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </LinearLayout>
    <Button
        android:id="@+id/signInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="sign up"
        android:textColor="#ffffff"
        android:layout_alignBottom="@id/centre_of_sign_up_screen"
        android:layout_alignParentRight="true"
        android:background="@color/school_color"
        android:layout_marginRight="16dp"
        android:padding="16dp"
        android:onClick="onSignInClicked"
        />
</RelativeLayout>